{

  "manifest_version": 2,
  "name": "Panel Mobile",
  "description": "Displays a sidebar that allows you to view the mobile version of your web pages.",
  "version": "1.0.0.1",
  "icons":{
    "48":"icons/smartphone.svg"
  },
  "applications": {
    "gecko": {
      "id":"{7756b64c-f43d-48e0-926b-60e488d24d5b}",
      "strict_min_version": "48.0"
    }
  },

  "sidebar_action": {
    "default_icon": "icons/smartphone.svg",
    "default_title" : "Panel Mobile",
    "default_panel": "sidebar/panel.html"
  },

  "permissions": ["storage", "tabs"],


  "web_accessible_resources": [
    "icons/smartphone.svg",
    "icons/smartphone.png"
  ],

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }

}
